@model CampSiteC3.Models.Reservation

@{
    ViewBag.Title = "Annuleren";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Annuleren</h2>

<h3>Weet je zeker dat je deze reservering wilt annuleren?</h3>
<div>
    <h4>Reservering</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>

        <dd>
            @Model.StartDate.ToString("dd/MM/yyyy")
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>

        <dd>
            @Model.EndDate.ToString("dd/MM/yyyy")
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.NumberOfAdults)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NumberOfAdults)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "List")
        </div>
    }
</div>
